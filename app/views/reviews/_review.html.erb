<tr>
  <td colspan="3">
    <p><%= review.description %></p>
    <% if current_user && current_user.id == review.user_id %>
    <%= button_to 'Delete', [review.product, review], method: "delete", data: { confirm: "Are you sure?" } %>
    <% end %>
  </td>
  <td colspan="1">
    <p><%= review.rating %></p>
  </td>
</tr>
